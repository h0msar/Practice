import random
#starting text
def whats_that_number():
    print ('''
    Hey everybody! It\'s time to play the game we all love
        WHAT'S
        THAT
        NUMBERRRRRRRR!
    Type "Cool" if you want to play.
           ''')
    #Sounds good?
    while True:
        start_game = input('Sounds good? ')
        
        #Cool
        if start_game in ('Cool', 'cool', 'Cool.', 'cool.'):
            print('''
Cool indeed! Choose your difficulty.
 
Easy is a number from 1 to 10
Medium is a number from 1 to 50
Hard is a number from 1 to 100
''')
        #Not cool
        else:
            print('I\'m going to need you to type "Cool" if you want to start.')
    
    
        difficulty = input('What difficulty do you want? ')
        if difficulty in ('Easy',  'easy', 'Easy.', 'easy.'):
            print ('''
Easy? I guess you're not looking for a challenge. Oh well. Lemme pick a number from 1 to 10 for you.''')
            the_number = random.randint(1,10)
            break
        elif difficulty in ('Medium','medium','Medium.','medium.'):
            print ('''
Medium is a little tricky! I think you can do it though. Lemme grab that number from 1 to 50 for you.''')
            the_number = random.randint(1,50)
            break
        elif difficulty in ('Hard', 'hard', 'Hard.', 'hard.'):
            print ('''
Woah. Are you sure? It's going to be a number from 1 to 100 just so you know what you're getting into.''')
            hard_confirmation = input('Yes or No. ')
            if hard_confirmation in ('Yes', 'yes', 'Yes.', 'yes.'):
                print('''
You're wild for that one. Best of luck to you. I've got the number now.''')
                the_number = random.randint(1,100)
                break
            if hard_confirmation in ('No', 'no', 'No.', 'no.'):
                print('''
Yeah, it's kind of a crazy ask. I don't blame you.
                      ''')
                return
        
    guess = 0
    print('''Ha! I\'ve got a good one here for you. It\'s a good number. Let\'s see if you can guess it.
''')

    while True:
        guess = int(input('What do you think the number is? ' ))
        if guess < the_number:
            print('''Too low! It\'s higher than that!
                  ''')
        if guess > the_number:
            print('''Too high! It\'s lower than that!
''')
        if guess == the_number:
            print('Holy crap! You actually got it. Nice job!')
            return
whats_that_number()
